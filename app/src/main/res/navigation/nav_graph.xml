    <fragment
        android:id="@+id/checklistsFragment"
        android:name="de.bitb.pantryplaner.ui.checklists.ChecklistsFragment"
        android:label="checklists">
        <action
            android:id="@+id/checklists_to_recipes"
            app:destination="@id/recipesFragment" />
        <action
            android:id="@+id/checklists_to_stocks"
            app:destination="@id/stocksFragment" />
        <action
            android:id="@+id/checklists_to_profile"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/checklists_to_settings"
            app:destination="@id/settingsFragment" />

        <action
