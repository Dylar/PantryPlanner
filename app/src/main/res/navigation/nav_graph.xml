            app:popUpToInclusive="false" />
        <action
            android:id="@+id/stocks_to_settings"
            app:destination="@id/settingsFragment"
            app:popUpTo="@+id/checklistsFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="de.bitb.pantryplaner.ui.profile.ProfileFragment"
        android:label="profile">
        <action
            android:id="@+id/profile_to_checklists"
            app:destination="@id/checklistsFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/profile_to_recipes"
            app:destination="@id/recipesFragment"
            app:popUpTo="@+id/checklistsFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/profile_to_stocks"
            app:destination="@id/stocksFragment"
            app:popUpTo="@+id/checklistsFragment"
            app:popUpToInclusive="false" />
