    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="de.bitb.pantryplaner.ui.intro.LoginFragment"
        android:label="login">
        <action
            android:id="@+id/login_to_releasenotes"
            app:destination="@id/releaseNotesFragment" />
        <action
            android:id="@+id/login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/login_to_checklists"
            app:destination="@id/checklistsFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="de.bitb.pantryplaner.ui.intro.RegisterFragment"
        android:label="register">
        <action
            android:id="@+id/register_to_checklists"
            app:destination="@id/checklistsFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

