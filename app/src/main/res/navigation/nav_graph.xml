<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="de.bitb.pantryplaner.ui.intro.SplashFragment"
        android:label="splash">
        <action
            android:id="@+id/splash_to_check"
            app:destination="@id/checkFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/checkFragment"
        android:name="de.bitb.pantryplaner.ui.check.CheckFragment"
        android:label="check">
    </fragment>
</navigation>
