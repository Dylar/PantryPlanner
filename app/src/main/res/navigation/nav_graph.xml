    <fragment
        android:id="@+id/checklistDetailsFragment"
        android:name="de.bitb.pantryplaner.ui.checklists.details.ChecklistDetailsFragment"
        android:label="checklistDetails">
        <action
            android:id="@+id/checklist_details_to_select_items"
            app:destination="@id/selectItemsFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectItemsFragment"
        android:name="de.bitb.pantryplaner.ui.select.SelectItemsFragment"
        android:label="selectItems" />

    <fragment
        android:id="@+id/recipesFragment"
        android:name="de.bitb.pantryplaner.ui.recipes.RecipesFragment"
        android:label="recipes">
        <action
            android:id="@+id/recipes_to_checklists"
            app:destination="@id/checklistsFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/recipes_to_stocks"
            app:destination="@id/stocksFragment"
            app:popUpTo="@+id/checklistsFragment"
